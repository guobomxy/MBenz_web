<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

	<diskStore path="java.io.tmpdir/lottery/hibernate" />

	<!-- DefaultCache setting. -->
	<defaultCache maxElementsInMemory="200"
		memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false"
		overflowToDisk="true" />

	<!-- Hibernate DefaultQueryCache setting. -->
	<cache name="org.hibernate.cache.StandardQueryCache"
		maxElementsInMemory="100" eternal="false" timeToLiveSeconds="30"
		overflowToDisk="true" />

</ehcache>
